            <Label fx:id="title" alignment="TOP_LEFT" prefHeight="59.0" prefWidth="298.0" styleClass="article-title" text="Title">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="description" prefHeight="86.0" prefWidth="442.0" styleClass="discrete" text="Description" />
         </children>
      </VBox>
      <Label fx:id="price" prefHeight="18.0" prefWidth="125.0" styleClass="title" text="Prix" />
      <Button mnemonicParsing="false" text="Voir" />
   </children>
</HBox>
