                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" prefHeight="150.0" prefWidth="345.0">
                     <children>
                        <HBox alignment="TOP_RIGHT" prefHeight="92.0" prefWidth="502.0">
                           <children>
                              <Label fx:id="price" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="95.0" prefWidth="187.0" styleClass="title" text="Prix" />
