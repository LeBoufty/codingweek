<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="99.0" prefWidth="1160.0" styleClass="container" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.telecomnancy.AnnoncelisteItemController">
   <children>
      <Button fx:id="button" mnemonicParsing="false" onAction="#showAnnonce" prefHeight="170.0" prefWidth="1221.0" styleClass="buttontransparent">
         <graphic>
            <HBox prefHeight="150.0" prefWidth="1099.0">
               <children>
                  <ImageView fx:id="img" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                  <VBox prefHeight="150.0" prefWidth="709.0" styleClass="article-content">
                     <children>
                        <Label fx:id="title" alignment="TOP_LEFT" prefHeight="59.0" prefWidth="254.0" styleClass="title" text="Title">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <Label fx:id="categorie" prefHeight="18.0" prefWidth="93.0" styleClass="article-date" text="Catégorie" />
                        <Label fx:id="description" prefHeight="55.0" prefWidth="671.0" styleClass="discrete" text="Description" />
                     </children>
                  </VBox>
                  <VBox prefHeight="150.0" prefWidth="201.0">
                     <children>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label fx:id="price" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="101.0" prefWidth="138.0" styleClass="title" text="Prix" />
                              <Label prefHeight="95.0" prefWidth="56.0" styleClass="title" text="₣" />
                              <Label fx:id="idannonce" prefHeight="18.0" prefWidth="9.0" text="Label" visible="false" />
                           </children>
                        </HBox>
                        <Label fx:id="code_postal" prefHeight="39.0" prefWidth="201.0" styleClass="discrete" text="Code postal" />
                        <Label fx:id="date_depot" prefHeight="26.0" prefWidth="201.0" styleClass="article-date" text="date depot" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </graphic>
      </Button>
   </children>
</HBox>
