<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <GridPane BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Création d'annonce">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label text="Nom de l'annonce" GridPane.rowIndex="1" />
            <TextField fx:id="name" GridPane.rowIndex="2" />
            <Label text="Prix" GridPane.rowIndex="3" />
            <TextField fx:id="prix" GridPane.rowIndex="4" />
            <Label text="Catégorie" GridPane.rowIndex="5" />
            <ChoiceBox fx:id="categorie" prefWidth="150.0" GridPane.rowIndex="6" />
            <Label text="Description" GridPane.rowIndex="7" />
            <TextField fx:id="Description" GridPane.halignment="CENTER" GridPane.rowIndex="8" />
            <Button mnemonicParsing="false" onAction="#create" text="Créer un compte" GridPane.halignment="CENTER" GridPane.rowIndex="9" />
         </children>
      </GridPane>
   </center>
</BorderPane>
